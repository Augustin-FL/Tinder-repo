<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@c1470c/white" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="11" android:src="@drawable/editprofile_addphoto_icon" />
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/translucent_gray_light" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="11" android:src="@drawable/editprofile_addphoto_icon" />
            </item>
        </layer-list>
    </item>
</selector>
